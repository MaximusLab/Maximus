{% extends 'console/base.html.twig' %}
{% form_theme form _self %}

{% block form_label_class -%}
col-sm-3
{%- endblock form_label_class %}
{% block form_group_class -%}
col-sm-9
{%- endblock form_group_class %}

{% block breadcrumb %}
{{
    breadcrumb([
        {title: 'Console Home', link: path('console_index')},
        {title: 'Settings', link: path('console_setting_index'), active: true},
    ])
}}
{% endblock breadcrumb %}

{% block body %}
    {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="pt-3 form-group row">
            <button class="btn btn-primary btn-block">Submit</button>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block stylesheets %}
<link href="{{ asset('build/console/setting.css') }}" rel="stylesheet" />
<style type="text/css">
    .CodeMirror {
        height: auto;
        border: 1px solid #272822;
        border-radius: .25rem;
    }
</style>
{% endblock stylesheets %}
{% block javascripts %}
<script src="{{ asset('build/console/setting.js') }}"></script>
{% endblock %}
